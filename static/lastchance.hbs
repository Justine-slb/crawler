<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Crawflix</title>
        <link rel="stylesheet" href="css/lastchance.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="favicon/favicon.ico">
    </head>
    <body>
        {{> header}}
        {{> turn_back_button}}
        <section class="mainContent">
            <h1>SHOW'S LEAVING NETFLIX</h1>
            {{#each leavingShows}}
                <div class="leavingCard">
                    <div class="imgBox">
                        <img src="{{mainImage}}" alt="Show's leaving netflix on {{date}}">
                    </div>
                    <div class="infoBox">
                        <p class="date">What's leaving netflix: {{date}}</p>
                        <div class="buttonBox">
                            <button class="button" onclick="show(this)">See More â†“</button>
                        </div>
                    </div>
                    <div class="listBox">
                        <ul>
                            {{#each titles}}
                            <li>{{title}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            {{/each}}
        {{> footer}}
        <script src="../js/show.js"></script>
        </section>
    </body>
</html>